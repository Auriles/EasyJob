      <div class="row vertical-align" id="login-container">
      <div class="col-sm-6 container" ng-show="!side">
      <button class="btn btn-lg btn-default center" ng-click="setSide('business')">Entreprise</button>
      </div>
      <div class="col-sm-6 container" ng-show="!side">
      <button class="btn btn-lg btn-default center" ng-click="setSide('private_person')">Particulier</button>
      </div>
      <div class="col-sm-8 container" ng-show="side">
      <div class="well center">
      <form name="loginForm" class="form-signin">
      <h2 class="form-signin-heading">Connexion</h2>
      <label for="username" class="sr-only">Nom d'utilisateur</label>
      <input type="text" ng-model="username" id="username" class="form-control" placeholder="Nom d'utilisateur" required autofocus>
      <label for="password" class="sr-only">Mot de passe</label>
      <input type="password" ng-model="password" id="password" class="form-control" placeholder="Mot de passe" required>
      <button class="btn btn-lg btn-primary btn-block" ng-click="userLogin()" ng-disabled="loginForm.$invalid">Se connecter</button>
      </form>
      </div>
      </div>
      </div>

